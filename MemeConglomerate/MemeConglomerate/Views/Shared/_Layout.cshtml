<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <style>
       .picture {
            min-width: 100%;
            height: auto;
        }
       .meme{
           padding-top: 30px;
       }
       .Image{
           padding-right: 50px;
           padding-left: 50px;
       }
       .innerBox{
           box-shadow: 3px 3px 5px 5px #ccc;
       }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Meme Conglomerate", "Index", "Main", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                        @RenderSection("nav", false)
                    <li><a data-toggle="modal" href="#addMemeModal">Add Meme <span class="sr-only"></span></a></li>
                </ul>
                <form class="navbar-form navbar-left">
                    <div class="form-group">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr/>
        
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - Meme Conglomerate</p>
    </footer>
    <script src="~/Scripts/mustache.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>