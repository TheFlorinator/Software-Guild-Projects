@model Exercises.Models.ViewModels.StudentVM
@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-xs-3">
        @Html.Partial("StudentNav")
    </div>
    <div class="col-xs-12 col-sm-9">
        <div class="row">
            <h3>Delete Student</h3>
        </div>
        <div class="row">
            <div class="col-xs-12">
                @using (Html.BeginForm())
                {
                    @Html.HiddenFor(s => s.Student.StudentId)
                    <p>Are you sure that you with to delte this student @Html.DisplayFor(s => s.Student.FirstName) @Html.DisplayFor(s => s.Student.LastName)?</p>
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    @Html.ActionLink("Cancel", "List", "Student", null, new { @class = "btn btn-sm btn-info" })
                }
            </div>
        </div>
    </div>
</div>

