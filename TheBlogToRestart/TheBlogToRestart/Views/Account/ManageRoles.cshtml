@model TheBlogToRestart.Models.UserView
@{
    ViewBag.Title = "ManageRoles";
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
}

<br /><br />
<div class="row">
    <div class="col-xs-12 col-sm-3">
    </div>
    <div class="col-xs-12 col-sm-9">
        <h3>Manager Roles</h3>
    </div>
</div>
@using (Html.BeginForm())
{
    <div class="col-xs-12">
        <div>
            <table id="mytable" class="table table-striped" style="width: auto">
                <thead>
                    <tr>
                        <th>Users</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@Html.ActionLink(user.Email, "EditRoles", "Account", new { id = user.Id }, null)</td>
                            <td>
                                <b>Current Role:</b>
                                @foreach (var role in user.Roles)
                                {
                                    foreach (var currentRole in Model.CurrentRole)
                                    {
                                        if (role.RoleId == currentRole.Id)
                                        {
                                            @currentRole.Name
                                        }
                                    }
                                }
                            </td>
                        </tr>

                    }
                </tbody>
            </table>

            <div class="form-group">
                <div class="col-md-10">
                    @*@Html.ActionLink("Save", "ChangeRole", Model.Role, new { @class = "btn btn-md btn-danger" })*@
                    @*<input type="submit" class="btn btn-default" value="Save" />*@
                    @Html.ActionLink("Create User", "Register", null, new { @class = "btn btn-md btn-danger" })
                </div>
            </div>
        </div>

    </div>
}

