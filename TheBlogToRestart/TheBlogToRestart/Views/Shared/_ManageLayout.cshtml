<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ManageLayout</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/bootstrap-journal.css" rel="stylesheet" />
    @RenderSection("head", false)
</head>
<body>
    <body style="margin:0;">
        <div class="container" id="header">
            <div class="navbar" style="position:absolute;z-index:5;">

            </div>


        </div>
    </body>

    <div class="container body-content">
        @RenderBody()
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Gastronome", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @if (HttpContext.Current.User.Identity.IsAuthenticated)
            {
                if (HttpContext.Current.User.IsInRole("Owner"))
                {
                    <ul class="nav navbar-right">
                        @Html.ActionLink("Manage Users", "ManageRoles", "Account", new { area = "" }, new { @class = "navbar-brand" })
                    </ul>
                }
            }
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Game Of Scones</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    @RenderSection("scripts", false)
</body>
</html>